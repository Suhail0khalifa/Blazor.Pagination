<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OutputType>Library</OutputType>
    <IsPackable>true</IsPackable>
    <BlazorLinkOnBuild>false</BlazorLinkOnBuild>
    <LangVersion>7.3</LangVersion>
    <PackageId>BlazorPagination</PackageId>
    <Title>Pagination control for .NET Core Blazor</Title>
    <Authors>villainoustourist</Authors>
    <Product>BlazorPagination</Product>
    <PackageProjectUrl>https://github.com/villainoustourist/Blazor.Pagination/</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/villainoustourist/Blazor.Pagination/blob/master/LICENSE</PackageLicenseUrl>
    <PackageTags>blazor aspnetcore component bootstrap4 pagination</PackageTags>
    <Description>A reusable pagination component for Blazor to show related content across multiple pages.</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <AssemblyName>BlazorPagination</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Browser" Version="0.7.0" />
    <PackageReference Include="Microsoft.AspNetCore.Blazor.Build" Version="0.7.0" />
  </ItemGroup>
</Project>
